<div class="ui raised very padded text container segment">
  <h2 class="ui header">Update Blog "<%=blog.title%>"</h2>
  
<form class="ui form" action="/Blogs/<%=blog._id%>?_method=PUT"  method="POST">
  <div class="field">
    <label>Title</label>
    <input type="text" name="Blog[title]" value="<%=blog.title%>">
  </div>
   <div class="field">
    <label>Image</label>
    <input type="text" name="Blog[image]"  value="<%=blog.image%>">
  </div>
  <div class="field">
    <label>Content</label>
    <textarea name="Blog[body]"><%=blog.body%></textarea>
  </div>
  	<input type="Submit" name="Submit1" class="ui button" >
	
</form>

</div>






